{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public",
        "buildCommand": "vite build"
      }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "^/api/blog/([^/]+)/translate$",
      "dest": "/server/index.ts"
    },
    {
      "src": "^/api/blog/([a-z]{2})/(.+)$",
      "dest": "/api/blog.ts?lang=$1&slug=$2"
    },
    {
      "src": "^/api/blog$",
      "dest": "/api/blog.ts"
    },
    {
      "src": "^/api/blog/([^/]+)$",
      "dest": "/api/blog.ts?slug=$1"
    },
    {
      "src": "^/api/(.*)$",
      "dest": "/api/$1.ts"
    },
    {
      "src": "^/images/articles/(.*)$",
      "dest": "/images/articles/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
