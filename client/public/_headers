# Headers for JavaScript modules to fix MIME type issues
/assets/js/*.js
  Content-Type: application/javascript

# General headers for all assets
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Content-Type corretto per sitemap XML
/sitemap*.xml
  Content-Type: application/xml; charset=utf-8

# Content-Type per robots.txt
/robots.txt
  Content-Type: text/plain; charset=utf-8
